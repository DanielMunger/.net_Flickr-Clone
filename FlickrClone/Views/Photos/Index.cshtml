@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout these sweet sweet photos</h2>

@model IEnumerable<FlickrClone.Models.Photo>

@{
    string Image = "";
    @foreach (var photo in ViewBag.Photos)
    {
        if (photo.Image != null)
        {
            var base64 = Convert.ToBase64String(photo.Image);
            Image = String.Format("data:image/gif;base64,{0}", base64);
            <div class="card-image">
                <img src='@Image' />
                @Html.ActionLink("View Me", "Details", new { id = photo.PhotoId })
            </div>
        }
    }
}
