@model FlickrClone.Models.ApplicationUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    string Image = "";
    if(Model.ProfilePicture != null)
    {
        var base64 = Convert.ToBase64String(Model.ProfilePicture);
        Image = String.Format("data:image/gif;base64,{0}", base64);

    }

}

<div>
    <img height="200" width="200" src="@Image" />
    @Html.DisplayFor(model => model.UserName)
    

    @foreach(var photo in ViewBag.userPhotos)
    {
        if (photo.Image != null)
        {
            var base64 = Convert.ToBase64String(photo.Image);
            Image = String.Format("data:image/gif;base64,{0}", base64);
            <div class="card-image">
                <img height="350" width="350" src="@Image" />
            </div>
        }

    }
</div>